<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="FullscreenTheme" parent="Theme.Sherlock">
        <!--<item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>-->
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
    <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="left_drawer">
        <item name="android:id">@+id/left_drawer</item>
        <item name="android:name">com.fivehundredpxdemo.android.ui.fragment.MenuListFragment</item>
        <item name="android:layout_width">@dimen/drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="Theme.FiveHundredPxDemo" parent="Theme.Sherlock">
        <item name="android:windowBackground">@color/abs__background_holo_dark</item>
        <!--<item name="android:actionBarStyle">@style/Widget.FiveHundredPxDemo.ActionBar</item>-->
        <item name="actionBarStyle">@style/Widget.FiveHundredPxDemo.ActionBar</item>

    </style>

    <style name="Widget.FiveHundredPxDemo.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="background">@drawable/actionbar_background</item>
    </style>

</resources>
