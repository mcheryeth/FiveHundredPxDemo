<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom divider -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/action_bar_bottom_divider" />
        </shape>
    </item>

    <!-- top divider bar -->
    <item android:top="0dip" android:bottom="2dip">
        <shape android:shape="rectangle">
            <solid android:color="@color/action_bar_top_divider" />
        </shape>
    </item>



    <!-- Color of your action bar -->
    <item android:bottom="2dip" android:top="2dip">
        <shape android:shape="rectangle">
            <solid android:color="@color/action_bar_background" />
        </shape>
    </item>



</layer-list>